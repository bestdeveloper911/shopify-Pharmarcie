        "type": "select",
        "id": "button_size",
        "label": "Button size",
        "options": [
        {
            "value": "sf__btn-small",
            "label": "Button small"
        },
        {
            "value": "",
            "label": "Button medium"
        },
        {
            "value": "sf__btn-large",
            "label": "Button large"
        }
        ],
        "default": ""
    },
    {
      "type": "header",
      "content": "Infinite loading",
      "info": "This function does not work when slider enabled. Total products need to greater than number of products to show."
    },
    {
        "type": "checkbox",
        "id": "infinite_load",
        "label": "Load products on scroll",
        "default": false
    },
    {
        "type": "range",
        "id": "max_page_load",
        "label": "Max pages to load",
        "default": 3,
        "min": 2,
        "max": 5
    },
    {
      "type": "header",
      "content": "Mobile settings"
