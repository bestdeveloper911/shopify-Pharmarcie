                "min": 3,
                "max": 8,
                "step": 1,
                "default": 4
            },
            {
                "type": "range",
                "id": "item_gap",
                "label": "Column gap",
                "min": 0,
                "max": 50,
                "default": 30,
                "unit": "px"
            },
            {
                "type": "header",
                "content": "Slider settings"
            },
            {
                "type": "checkbox",
                "id": "enable_slider",
                "label": "Enable slider",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show pagination",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_navigation",
                "label": "Show navigation",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "autorotate",
                "label": {"en": "Auto slide"},
                "default": false
