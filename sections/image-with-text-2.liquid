{%- assign show_overlay = section.settings.show_overlay -%}
{%- assign parallax = section.settings.parallax -%}

{%- if section.settings.hero_size == 'adapt' -%}
  {%- if section.settings.image.aspect_ratio == blank -%}
    {%- assign min_aspect_ratio = 2.333 -%}
  {%- else -%}
    {%- assign min_aspect_ratio = section.settings.image.aspect_ratio -%}
  {%- endif -%}
  {% assign wrapper_height = 100 | divided_by: min_aspect_ratio %}
{%- endif -%}


{%- assign bg_position = section.settings.bg_position -%}
{%- assign content_positions = section.settings.content_position | split: ' ' -%}
{%- assign text_horizontal_alignment = content_positions.first -%}
{%- assign text_vertical_alignment = content_positions.last | strip -%}
{%- assign text_size = section.settings.text_size -%}
{%- assign container = section.settings.container -%}
{%- assign image_link = section.settings.image_link -%}

{% assign content_container = 'container-fluid' %}
{% if section.settings.content_in_container == true %}
    {% assign content_container = 'container' %}
{% endif %}

<section id="sf__hero-{{ section.id }}" class="{{ section.settings.custom_class }}" data-section-type="hero" data-section-id="{{ section.id }}" data-parallax="{{ parallax }}">
    <div class="{{ container }}" style="--content-color: {{ section.settings.text_color }};">
        <div
            id="sf-hero-{{ section.id }}"
            class="sf-hero {% if image_link != blank %} sf-hero--has-link{% endif %}{% if section.settings.mb_image != blank %} sf-hero__mobile-no-overlay{% endif %} sf-hero--text-{{ section.settings.text_color }} sf-hero--{{ section.settings.hero_size }}{% if show_overlay %} sf-hero--has-overlay{% endif %} {% if section.settings.mb_image != blank %}mb-10 md:mb-0{% endif %}"
            {% if section.settings.hero_size == 'adapt' %}
            data-min-aspect-ratio="{{ min_aspect_ratio }}"
            style="--slide-height: {{- wrapper_height -}}vw"
            {% endif %}
        >
            {% unless section.settings.image != blank %}
                <div class="hidden pc md:block absolute inset-0 overflow-hidden">
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'sf__placeholder-svg w-full h-full' }}
                </div>
            {% else %}
                <div class="{% if section.settings.mb_image != blank %}hidden md:block{% endif %} sf-hero__bg lazyload js pointer-events-none bg-no-repeat bg-{{ bg_position }} bg-cover bg-no-repeat{% if parallax %} bg-fixed{% endif %}"
                     data-bg="{{section.settings.image | img_url: '300x' }}"
                     data-bgset="{% render 'bgset', image: section.settings.image %}"
                     data-parent-fit="contain"
                     data-sizes="auto" data-image-loading></div>
            {% endunless %}
            {% if image_link != blank %}
              <a href="{{ image_link }}" class="sf-slider__link"></a>
            {% endif %}
            {% if section.settings.mb_image != blank %}
                <div class="block md:hidden">{% render 'responsive-image', image: section.settings.mb_image %}</div>
            {% endif %}

            <div class="flex sf-hero__inner {{ content_container }} {% if section.settings.mb_image != blank %}pt-7 md:py-24{% else %}py-24{% endif %} sf-hero__inner--{{ text_vertical_alignment }}-{{ text_horizontal_alignment }}">
                <div class="hidden md:block sf-hero__content w-max md:max-w-4xl  text-{{ section.settings.text_alignment }}">
                    {% if section.settings.subtitle != blank %}
                        <span class="{% if text_size == 'medium' %}text-base {% else %}text-xl {% endif %} mb-4 sf-hero__subtitle text-{{ section.settings.text_color }}">{{ section.settings.subtitle }}</span>
                    {% endif %}
                    {% if section.settings.title != blank %}
                        <h3 class="{% if text_size == 'medium' %}text-2xl md:text-5xl {% else %}text-2xl md:text-5xl 2xl:text-6xl {% endif %} 2xl:leading-snug md:leading-snug mb-6 lg:font-medium sf-hero__title text-{{ section.settings.text_color }}">{{ section.settings.title }}</h3>
                    {% endif %}
                    {% if section.settings.text != blank %}
                        <div class="{% if text_size == 'medium' %}text-base {% else %}text-lg {% endif %} mb-6 sf-hero__text {% if section.settings.text_color == 'white' %}text-white{% else %}text-color-subtext{% endif %}">{{ section.settings.text }}</div>
                    {% endif %}
                    {% if section.settings.button_label != blank %}
                        <div class="sf-hero__btn">
                            <a href="{{ section.settings.button_link }}" class="sf__btn {{ section.settings.button_style }} {{ section.settings.button_size }}">{{ section.settings.button_label }}</a>
                        </div>
                    {% endif %}
                </div>
                <div class="block md:hidden sf-hero__content w-max md:max-w-4xl  text-{{ section.settings.text_alignment }}">
                    {% if section.settings.subtitle != blank %}
                        <span class="{% if text_size == 'medium' %}text-base {% else %}text-xl {% endif %} mb-4 sf-hero__subtitle {% if section.settings.mb_image != blank %}text-color-body-text{% else %}text-{{ section.settings.text_color }}{% endif %}">{{ section.settings.subtitle }}</span>
                    {% endif %}
                    {% if section.settings.title != blank %}
                        <h3 class="{% if text_size == 'medium' %}text-2xl md:text-5xl {% else %}text-2xl md:text-5xl 2xl:text-6xl {% endif %} 2xl:leading-snug md:leading-snug mb-2 lg:font-medium sf-hero__title {% if section.settings.mb_image != blank %}text-color-body-text{% else %}text-{{ section.settings.text_color }}{% endif %}">{{ section.settings.title }}</h3>
                    {% endif %}
                    {% if section.settings.text != blank %}
                        <div class="{% if text_size == 'medium' %}text-base {% else %}text-lg {% endif %} mb-6 sf-hero__text {% if section.settings.mb_image != blank %}text-color-subtext{% else %}text-{{ section.settings.text_color }}{% endif %}">{{ section.settings.text }}</div>
                    {% endif %}
                    {% if section.settings.button_label != blank %}
                        <div class="sf-hero__btn">
                            <a href="{{ section.settings.button_link }}" class="sf__btn {{ section.settings.button_style }} {{ section.settings.button_size }}">{{ section.settings.button_label }}</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

