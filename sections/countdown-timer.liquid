            "type": "image_picker",
            "id": "mb_image",
            "label": "Image on mobile"
        },
        {
            "type": "text",
            "id": "custom_class",
            "label": "Custom classes"
        }
    ],
    "templates": ["index"],
    "presets": [
        {
            "name": "Countdown timer",
            "category": "Promotional"
        }
    ]
}
