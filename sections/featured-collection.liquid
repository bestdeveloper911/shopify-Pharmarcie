    },
    {
      "type": "header",
      "content": "Grid settings"
    },
    {
        "type": "range",
        "id": "product_to_show",
        "label": "Products to show",
        "min": 2,
        "max": 12,
        "step": 1,
        "default": 8
    },
    {
        "type": "range",
