                    {
                        "value": "scaling-down",
                        "label": "Scaling down"
                    },
                    {
                        "value": "scaling-up",
                        "label": "Scaling up"
                    }
                ]
            },
            {
                "type": "checkbox",
                "id": "show_product_count",
                "label": "Show product count",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "count_inline_title",
                "label": "Product count inline",
                "default": true
