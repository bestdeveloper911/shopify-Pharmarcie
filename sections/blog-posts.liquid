            "id": "article_align_content",
            "label": "Content alignment",
            "default": "text-left",
            "options": [
            {
                "label": "Left",
                "value": "text-left"
            },
            {
                "label": "Center",
                "value": "text-center"
            },
            {
                "label": "Right",
