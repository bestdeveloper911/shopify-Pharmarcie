        },
        {
            "type": "checkbox",
            "id": "use_scroll_mobile",
            "label": "Enable horizontal scroll",
            "default": true
        },
        {
            "type": "text",
            "id": "custom_class",
            "label": "Custom classes"
        }
    ],
    "presets":[
        {
            "name":"Blog posts",
            "category":"Blog"
        }
    ]
}
{% endschema %}
