            {
                "value": "",
                "label": "Use global settings"
            },
            {
                "value": "original",
                "label": "Original aspect ratio"
            },
            {
                "value": "1\/1",
                "label": "1:1"
            },
            {
                "value": "3\/4",
                "label": "3:4"
            },
            {
                "value": "4\/3",
                "label": "4:3"
            },
            {
                "value": "16\/9",
                "label": "16:9"
            }
        ]
    },
    {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendors",
        "default": false
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
        "type": "checkbox",
        "id": "enable_slider",
        "label": "Enable slider",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "show_pagination",
        "label": "Show pagination",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "show_navigation",
        "label": "Show navigation",
        "default": false
    },
    {
        "type": "header",
        "content": "Button settings"
    },
    {
        "type": "select",
        "id": "button_type",
