        "type": "select",
        "id": "pcard_layout",
        "label": "Design layout",
        "default": "",
        "options": [
            {
                "value": "",
                "label": "Use global settings"
            },
            {
                "value": "1",
                "label": "Style 1"
            },
            {
                "value": "2",
                "label": "Style 2"
            },
            {
                "value": "3",
                "label": "Style 3"
            },
            {
                "value": "4",
                "label": "Style 4"
            }
        ]
    },
    {
        "type": "select",
        "id": "pcard_image_ratio",
        "label": "Image aspect ratio",
        "default": "",
