                    },
                    {
                        "type": "color",
                        "id": "item_text_color",
                        "label": "Text color",
                        "default": "#fff"
                    }
                ]
            }
        ],
        "presets": [{
            "name": "Collection list",
            "category": "Collection",
            "blocks": [
                { "type": "collection_block" },
                { "type": "collection_block" },
                { "type": "collection_block" },
